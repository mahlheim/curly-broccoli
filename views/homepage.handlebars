<div>
  <title>FurEver Homepage</title>
  <link rel="stylesheet" href="/styles.css">
</div>
<body>
  <header>
    <h1>Welcome to FurEver</h1>
    <nav>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/pets">View Pets</a></li>
        <li><a href="/adopt">Adopt a Pet</a></li>
        <li><a href="/about">About Us</a></li>
        <li>
          {{#if loggedIn}}
            <a href="/profile">Profile</a>
          {{else}}
            <a href="/login">Login</a>
          {{/if}}
        </li>
      </ul>
    </nav>
  </header>

  <main>
    <section class="hero">
      <h2>Find Your Perfect Companion</h2>
      <p>Explore our wide selection of adorable pets available for adoption.</p>
      <a href="/pets" class="cta-button">View Pets</a>
    </section>

    <section class="featured-pets">
      <h2>Cuties</h2>
      <div class="pet-list">
        {{#each pets}}
          <div class="pet">
            <img src="{{image}}" alt="{{name}}">
            <h3>{{name}}</h3>
            <p>{{description}}</p>
          </div>
        {{/each}}
      </div>
    </section>
  </main>

  <footer>
    <p>&copy; 2023 Pet Adoption. All rights reserved.</p>
  </footer>
</body>
</html>